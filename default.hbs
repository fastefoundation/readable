    {{ghost_head}}
</head>
<body class="{{body_class}}">

{{! Everything else gets inserted here }}
<div class="container">
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand">Rolf A. <b>{{@blog.title}}</b> for Design Creativity</h3>
                        {{navigation}}
                    </div>
                </div>
                {{{body}}}

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <footer class="site-footer">
            		<div class="row"> <!--Footer Grid START -->
                  <div class="col-md-4"><!--Footer Left -->
                    <h2>
                      <b>Faste Foundation</b><br>
                        90 Peter Coutts Circle<br>
                        Stanford, CA 94305
                        <br>
                        <br>
                        <a href="mailto:info@fastefoundation.org">info@fastefoundation.org</a>
                        <br>
                        <br>
                      </h2>
                  </div>
                  <div class="col-md-4"><!--Footer Middle -->
                    <form class="navbar-form navbar-left" role="search">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="email@example.com">
                      </div>
                      <button type="Join" class="btn btn-default">Join</button>
                    </form>
                    <br>
                    <section class="copyright">All content copyright <a href="/">Rolf A. <b>{{@blog.title}}</b> for Design Creativity</a> &copy; 2015 &bull; All rights reserved.
                    </section>
                  </div>
                  <div class="col-md-4"><!--Footer Right -->
                    <button type="button" class="btn btn-default">Donate</button>
                  </div>
             	</div> <!--Footer Grid END -->
		 
            </footer>
        </div>
    </div>
</div>

{{! Ghost outputs important scripts and data with this tag }}
{{ghost_foot}}

